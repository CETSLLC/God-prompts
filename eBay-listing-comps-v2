VALUES ('<uuid>','<iso>',NULL,'<title>','<cat>','<condition>',<bin>,<bo_floor>,<auction>,<wt>,'<LxWxH>','<LxWxH>');
-- Repeat INSERTs for comps_sold, comps_active, shipping_matrix using normalized rows.
=== END EXPORT:SQL:DML ===

