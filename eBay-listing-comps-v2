3. SQL (ANSI-SQL; run DDL if tables do not exist; then DML inserts for this listing)
   === EXPORT:SQL:DDL ===
   CREATE TABLE IF NOT EXISTS listings (
   listing_uid TEXT PRIMARY KEY,
   created_utc TEXT NOT NULL,
   sku TEXT,
   title_selected TEXT NOT NULL,
   category_path TEXT NOT NULL,
   condition_name TEXT NOT NULL,
   price_buy_it_now REAL,
   price_best_offer_floor REAL,
   auction_start REAL,
   weight_lb REAL,
   box_inner_in TEXT,
   box_outer_in TEXT
   );
   CREATE TABLE IF NOT EXISTS comps_sold (
   listing_uid TEXT,
   date TEXT,
   platform TEXT,
   condition TEXT,
   variant_size TEXT,
   included TEXT,
   price REAL,
   best_offer INTEGER,
   link TEXT,
   rationale TEXT
   );
   CREATE TABLE IF NOT EXISTS comps_active (
   listing_uid TEXT,
   date TEXT,
   platform TEXT,
   condition TEXT,
   variant_size TEXT,
   included TEXT,
   price REAL,
   link TEXT,
   rationale TEXT
   );
   CREATE TABLE IF NOT EXISTS shipping_matrix (
   listing_uid TEXT,
   tier TEXT,
   service TEXT,
   speed_days TEXT,
   dim_weight_risk TEXT,
   insurance TEXT,
   signature TEXT
   );
   === END EXPORT:SQL:DDL ===

=== EXPORT:SQL:DML ===
